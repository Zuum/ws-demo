{
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "commonjs",
    "target": "ES2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "types": [
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types/"
    ],
    "paths": {
      "client": [
        "client/*"
      ],
      "server": [
        "server/*"
      ],
      "types": [
        "types/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
  ],
  "include": [
    "src/**/*.ts",
  ]
}
