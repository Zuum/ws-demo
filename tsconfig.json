{
  "compilerOptions": {
    "baseUrl": "./src/",
    "module": "commonjs",
    "target": "ES2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "types": [
      "node",
      "jest"
    ],
    "typeRoots": [
      "./node_modules/@types/"
    ],
    "paths": {
      "client": [
        "src/client/*"
      ],
      "server": [
        "src/server/*"
      ],
      "types": [
        "src/types/*"
      ],
      "logger": [
        "src/logger/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
  ],
  "include": [
    "src/**/*.ts",
    "test/**/*.test.ts"
  ]
}
